{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "linebreak-style": "off",
    "no-confusing-arrow": "off",
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": ["error", "never"],
    "import/no-unresolved": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "no-debugger": "off",
    "no-plusplus": "off"
  },
  "extends": ["eslint:recommended", "airbnb-base"]
}
